<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <table>

                    <tr>
                        <td>
                            <p class="navbar-brand"></p>
                            @Html.ActionLink(" [Equipas] ", "Index", "Equipas", new { area = "" }, new { @class = "navbar-brand", @title = "Entity Framework" })
                            @Html.ActionLink(" [Membros] ", "Index", "Membroes", new { area = "" }, new { @class = "navbar-brand", @title = "Entity Framework" })
                        </td>
                        <td>
                            <p class="navbar-brand">Drops:</p>
                            @Html.ActionLink(" [A] ", "Index", "A", new { area = "" }, new { @class = "navbar-brand", @title = "Drop com 4 clubes / List<string>" })
                            @Html.ActionLink(" [B] ", "Index", "B", new { area = "" }, new { @class = "navbar-brand", @title = "Foreach / List<Equipa>" })
                            @Html.ActionLink(" [C] ", "Index", "C", new { area = "" }, new { @class = "navbar-brand", @title = "Drops para tabelas" })
                            @Html.ActionLink(" [D] ", "Index", "D", new { area = "" }, new { @class = "navbar-brand", @title = "Visualizar a PK a partir da seleção na drop" })
                            @Html.ActionLink(" [J] ", "Index", "J", new { area = "" }, new { @class = "navbar-brand", @title = "Drop para escolher membros por equipa" })
                            @Html.ActionLink(" [K] ", "Index", "K", new { area = "" }, 
                                new { @class = "navbar-brand", @style = "color:red;", @title = "Drop sem botão submit; perceber bem este exercício" });
                        </td>
                        <td>
                            <p class="navbar-brand">LINQ: </p>
                            @Html.ActionLink(" [I] ", "Index", "I", new { area = "" }, new { @class = "navbar-brand", @title = "10 consultas com LINQ" })
                        </td>
                        <td>
                            <p class="navbar-brand">ModelView:</p>
                            @Html.ActionLink(" [E] ", "Index", "E", new { area = "" }, new { @class = "navbar-brand", @title = "1: ModelView simples" })
                            @Html.ActionLink(" [F] ", "Index", "F", new { area = "" }, new { @class = "navbar-brand", @title = "2: ModelView com select" })
                            @Html.ActionLink(" [G] ", "Index", "G", new { area = "" }, new { @class = "navbar-brand", @title = "3: ModelView com cores" })
                            @Html.ActionLink(" [H] ", "Index", "H", new { area = "" }, new { @class = "navbar-brand", @title = "4: ModelView com 'estatísticas'" })
                            <p class="navbar-brand">(rato por cima das opções)</p>
                        </td>
                        
                    </tr>
                </table>
                






            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>