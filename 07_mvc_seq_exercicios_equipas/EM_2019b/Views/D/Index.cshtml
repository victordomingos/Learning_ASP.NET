@model IEnumerable<EquipaMembros2019.Models.Equipa>

@{
    ViewBag.Title = "Index";
}

<h2>Droplist</h2>

<br />
<br />
<p>
    Mostrar o ID associado ao registo que o utilizador seleciona na Droplist.
</p>

@using (Html.BeginForm())
{
    @Html.DropDownList("id_equipa", (SelectList)ViewBag.EQUIPAS, " - Selecionar equipa - ")


    <p>

        @ViewBag.SELECTED_TEAM

    </p>


    <br />
    <br />


    <p>
        Listar membros numa Droplist (ainda sem filtragem por equipa).
    </p>

    @Html.DropDownList("id_membro", (SelectList)ViewBag.MEMBROS, " - Selecionar membro - ")


    <p>

        @ViewBag.SELECTED_MEMBER

    </p>


    <br />
    <br />




    <input type="submit" name="name" value="Atualizar" />

}



