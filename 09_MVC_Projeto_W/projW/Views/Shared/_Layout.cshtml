<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Project W Task Manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Project W", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Tarefas", "Index", "Tarefas")</li>
                    <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                    <li>@Html.ActionLink("Funcionários", "Index", "Funcionarios")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Parametrização</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Tipos de Prioridade", "Index", "TipoPrioridades", new { area = "" }, new { @class = "" })</li>
                            <li>@Html.ActionLink("Tipos de Tarefa", "Index", "TipoTarefas", new { area = "" }, new { @class = "" })</li>
                            <li>@Html.ActionLink("Açoes e Procedimentos", "Index", "LinhaDetarefas", new { area = "" }, new { @class = "navbar-brand" })</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Etc</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Tarefas por cliente", "Index", "TarefasPorCliente", new { area = "" }, new { @class = "" })</li>
                            <li>@Html.ActionLink("Tarefas por cliente e funcionário", "Index", "TarefasPorClienteEFuncionario", new { area = "" }, new { @class = "" })</li>
                            <li>@Html.ActionLink("Linhas de Tarefa por ID de Tarefa", "Index", "LinhasDeTarefaPorIdTarefa", new { area = "" }, new { @class = "" })</li>
                            <li>@Html.ActionLink("Eliminar Tarefa por ID de Tarefa, com confirmação", "Index", "EliminarTarefa", new { area = "" }, new { @class = "" })</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p align="center"><small><br />&copy; @DateTime.Now.Year - The Amazing Project W Team</small></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
