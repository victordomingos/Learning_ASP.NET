@model IEnumerable<projW.Models.LinhaDeTarefa>

@{
    ViewBag.Title = "Index";
}

<h2>Linhas de tarefa Por ID de tarefa</h2>


@using (Html.BeginForm())
{
    @Html.TextBox("tarefaID") 
    <input type="submit" name="name" value="Filtrar" />
}

@if (ViewBag.TAREFAID != null)
{
    <p>A mostrar linhas de tarefa referentes à tarefa nº @ViewBag.TAREFAID.</p>
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tarefa.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descritivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataDaLinha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tarefa.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descritivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataDaLinha)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
